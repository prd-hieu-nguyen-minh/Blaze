{
    "name": "Blaze",
    "description": "Support olivia to add new candidates faster",
    "version": "0.0.1",
    "manifest_version": 2,
    "browser_action": {
        "default_title": "Blaze"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "background",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png"
    },
    "default_icon": "icons/icon16.png"
}
